{
    "$id": "newProduct",
    "type": "object",
    "properties": {
        "nftMetadataID": {
            "type": "string",
            "isNotEmpty": true,
            "minLength": 6
        },
        "productTitle": {
            "type": "string",
            "isNotEmpty": true,
            "minLength": 2
        },
        "productDescription": {
            "type": "string",
            "isNotEmpty": true,
            "minLength": 25
        },
        "productCategory": {
            "type": "string",
            "isNotEmpty": true
        },
        "productPublished": {
            "type": "boolean"
        },
        "productPermalink": {
            "type": "string",
            "isNotEmpty": true
        },
        "owner": {
            "type": "string",
            "isNotEmpty": true
        }
    },
    "errorMessage": {
        "properties": {
            "productPublished": "Should be either true or false",
            "productCategory": "Category should be selected"
        }
    },
    "required": [
        "nftMetadataID",
        "productTitle",
        "productDescription",
        "owner",
        "productCategory"
    ]
}