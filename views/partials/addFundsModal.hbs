<div class="modal fade" id="addFundsModal" tabindex="-1" role="dialog" aria-labelledby="addFundsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="addFundsModalLabel">Add Funds</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal m-4" id="addFundsForm" data-toggle="validator">
                    <input type="hidden" id="addFundsAssetSymbol" value="{{config.peerplaysAssetSymbol}}">
                    <input type="hidden" id="addFundsAssetPrecision" value="{{config.peerplaysAssetPrecision}}">
                    <input type="hidden" id="minFundsRequired">
                    <div class="form-group">
                        <label for="amountToAdd" class="control-label">{{ @root.__ "Amount to add" }} ({{config.peerplaysAssetSymbol}}) *</label>
                        <input type="number" id="amountToAdd" class="form-control" min="0" step="any" required/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary mr-auto" data-dismiss="modal">Close</button>
                <button type="button" id="buttonAddFunds" class="btn btn-success">Add Funds</button>
            </div>
        </div>
    </div>
</div>